/* components/x-goods-item/x-goods-item.wxss */

.goods-item image {
  width: 100%;
  border-radius: 10rpx;
}


.goods-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
}

.goods-new-price, .goods-initial-price {
  font-size: 26rpx;
}

.goods-new-price {
  color: #ff0c46;
  margin-right: 10rpx;
}

.goods-initial-price {
  text-decoration: line-through;
  color: #bbb;
}