/* pages/goodsDetail/childCpns/x-sku-service/x-sku-service.wxss */
.sku-container {
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 16rpx solid #f9f9f9;
}

.sku-service {
  position: relative;
  height: 50rpx;
  padding: 20rpx 20rpx 20rpx 26rpx;
  display: flex;
  align-items: center;
}

.sku-service .service-name {
  color: #aaa;
}

.sku-service .service-desc {
  margin-left: 20rpx;
  color: #333;
}

.sku-selection {
  position: relative;
  height: 50rpx;
  padding: 20rpx 20rpx 20rpx 26rpx;
  display: flex;
  align-items: center;
}

.sku-selection .sku-name {
  color: #aaa;
}

.sku-selection .sku-desc {
  margin-left: 20rpx;
  color: #333;
}

.sku-arrow {
  position: absolute;
  right: 44rpx;
}


/* 收货服务面板 */
.popup-service-container,
.popup-selection-container {
  padding: 36rpx 36rpx 0 36rpx;
}

.popup-service-container .popup-item {
  position: relative;
  margin-bottom: 50rpx;
}

.popup-service-container .popup-item .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.popup-service-container .popup-item .content {
  font-size: 28rpx;
  color: #a3a3a3;
  margin-top: 12rpx;
}

.popup-service-container .confirm-button {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  color: #fff;
  border-radius: 50rpx;
  background-color: #ff0c46;
}

/* 规格选择 */
.popup-selection-container .popup-item {
  position: relative;
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  padding-top: 26rpx;
  /* margin-bottom: 50rpx; */
}

.popup-selection-container .popup-item .title {
  font-size: 30rpx;
  font-weight: 400;
  color: #333;
}

.popup-selection-container .popup-item .content {
  font-size: 24rpx;
  color: #a3a3a3;
  margin-top: 12rpx;
}

.popup-selection-container .popup-heading-item {
  display: flex;
  align-items: center;
}

.popup-selection-container .popup-heading-item .content {
  font-size: 26rpx;
  margin-left: 24rpx;
}

.popup-selection-container .popup-heading-item .sku-big-image {
  width: 120rpx;
}

.popup-selection-container .popup-heading-item .sku-price {
  font-size: 44rpx;
  font-weight: 600;
  color: #ff0c46;
}

.popup-selection-container .popup-heading-item .sku-stock {
  margin-top: 14rpx;
  margin-bottom: 14rpx;
}

.popup-selection-container .popup-sku-item .option {
  display: inline-block;
  margin-right: 30rpx;
  margin-top: 18rpx;
  padding: 18rpx 24rpx;
  background-color: #f7f8fa;
  border-radius: 6rpx;
  color: #333;
}


.popup-selection-container .purchase-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  font-size: 30rpx;
}

.popup-selection-container .purchase-count .count-name {
  font-weight: 400;
}

.popup-selection-container .confirm-button {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  color: #fff;
  border-radius: 50rpx;
  background-color: #ff0c46;
}

.popup-selection-container .buy-action {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  width: 90%;
  color: #fff;
  background-color: #ff0c46;
  border-radius: 50rpx;
}

.popup-selection-container .buy-action .add-cart {
  height: 100%;
  display: inline-block;
  width: 50%;
  background-color: #ff8c87;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}

.popup-selection-container .buy-action .buy-now {
  height: 100%;
  display: inline-block;
  width: 50%;
  background-color: #ff0c46;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

/* 选择具体规格选项时高亮 */
.active {
  color: #ff0c46 !important;
  background-color: rgba(255, 12, 70, .1) !important;
}