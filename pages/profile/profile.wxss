/* pages/profile/profile.wxss */
.profile-container {
  width: 100%;
  height: 100%;
  background-color: #f7f8fa;
}

.user-container {
  line-height: 240rpx;
  height: 240rpx;
  background-color: #ff0c46;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.user-container .user-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.user-container .user-content .user-image  {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: #f7f7f7;
}

.user-container .user-content .user-image image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.my-order-container {
  width: 86%;
  margin: auto;
  margin-top: 24rpx;
  padding: 30rpx 28rpx 40rpx 28rpx;
  background-color: white;
  border-radius: 12rpx;
}

.my-order-container .my-order-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40rpx;
  line-height: 40rpx;
  padding-bottom: 22rpx;
  border-bottom: 1rpx solid #f7f8fa;
}

.my-order-container .my-order-heading .my-order-title {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}

.my-order-container .my-order-heading .all-order-button {
  font-size: 28rpx;
  color: #bfbec3;
  padding: 18rpx 0;
}

.my-order-container .my-order-heading .all-order-button image {
  position: relative;
  top: 4rpx;
  width: 30rpx;
}

.my-order-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 32rpx;
}

.my-order-content .order-item {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.my-order-content .order-item .order-item-image {
  width: 48rpx;
}

.my-order-content .order-item .order-item-desc {
  margin-top: 10rpx;
}

.other-info-container {
  width: 89%;
  margin: auto;
  margin-top: 24rpx;
  padding: 2rpx 0 4rpx 28rpx;
  background-color: white;
  border-radius: 12rpx;
}

.other-info-container .other-info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  padding-bottom: 26rpx;
  padding-top: 26rpx;
  border-bottom: 1rpx solid #f7f8fa;
}

.other-info-container .other-info-item:last-child {
  border-bottom: 0;
}

.other-info-container .other-info-item .item-desc {
  display: flex;
  align-items: center;
}

.other-info-container .other-info-item .other-info-item-image {
  margin-right: 10rpx;
  width: 42rpx;
}

.other-info-container .other-info-item .right-arrow {
  position: relative;
  right: 30rpx;
  width: 30rpx;
}


.personal-info-container {
  width: 89%;
  margin: auto;
  margin-top: 24rpx;
  padding: 2rpx 0 4rpx 28rpx;
  background-color: white;
  border-radius: 12rpx;
}

.personal-info-container .personal-info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  border-bottom: 1rpx solid #f7f8fa;
}

.personal-info-container .personal-info-item .custom-service-button {
  width: 100% !important;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333 !important; 
}


.personal-info-container .personal-info-item:last-child {
  border-bottom: 0;
}

.personal-info-container .personal-info-item .item-desc {
  display: flex;
  align-items: center;
}

.personal-info-container .personal-info-item .personal-info-item-image {
  margin-right: 10rpx;
  width: 42rpx;
}

.personal-info-container .personal-info-item .right-arrow {
  position: relative;
  right: 30rpx;
  width: 30rpx;
}

/* 因为使用了 van-button，所以重新设置箭头与item的样式 */
.personal-info-container .personal-info-item .service-chat-arrow {
  position: absolute;
  bottom: 30rpx;
  right: 12rpx;
}

.personal-info-container .service-chat-item {
  padding: 0;
}