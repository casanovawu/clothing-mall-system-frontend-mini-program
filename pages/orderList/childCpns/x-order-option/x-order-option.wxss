/* pages/orderList/childCpns/x-order-option.wxss */

.order-option-container {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 200;
  display: flex;
  align-items: center;
  background-color: white;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 24rpx;
}

.order-option-container .option {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  font-size: 26rpx;
  font-weight: 400;
  color: #333;
  text-align: center;
}

.active {
  color: #ff0c46;
  padding: 0 18rpx 22rpx;
  border-bottom: 4rpx solid #ff0c46;
}
 